@model Book
<div class="container">
    <h1>Book Create</h1>
    <form method="post">
        <div class="row">
            <div class="mb-3 col-4">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" type="text" class="form-control">
                <span asp-validation-for="Title" style="color:red"></span>
            </div>
            <div class="mb-3 col-4">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" type="text" class="form-control">
                <span asp-validation-for="Description" style="color:red"></span>
            </div>
            <div class="mb-3 col-4">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" type="text" class="form-control">
                <span asp-validation-for="Price" style="color:red"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="AuthorId" class="form-label">Author</label>
            <select asp-for="AuthorId" asp-items="new SelectList(ViewBag.authors,nameof(Author.Id), nameof(Author.Name))" class="form-control">
                <option disabled selected>Select Author</option>
            </select>
            <span asp-validation-for="AuthorId" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="new SelectList(ViewBag.categories,nameof(Category.Id), nameof(Category.Name))" class="form-control">
                <option disabled selected>Select Author</option>
            </select>
            <span asp-validation-for="CategoryId" style="color:red"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>